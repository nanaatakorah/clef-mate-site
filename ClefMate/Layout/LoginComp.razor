<script>
const inputBox = document.querySelectorAll('#inputBox')



const handleMovablePlaceholder = (element) => {
    const firstChild = element.firstElementChild
    const lastChild = element.lastElementChild
    const childClastList = lastChild.classList
    const containTopElement = childClastList.contains('top-[14px]')
    if(containTopElement) {
        childClastList.remove('top-[14px]')
        lastChild.style.top = '-10px'
    }

    const handleInputChange = (event) => {
        const value = event.target.value
        if(value === '') {
            lastChild.style.top = '14px'
        }else {
            lastChild.style.top = '-10px'
        }
    }

    
    firstChild.addEventListener('input',handleInputChange)
}

inputBox.forEach((element) => {
    element.addEventListener('click', () => {handleMovablePlaceholder(element)})
})


</script>
