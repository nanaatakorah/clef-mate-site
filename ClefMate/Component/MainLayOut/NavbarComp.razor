// sticky navbar start
const scrollNavbar = document.querySelector('#navbar');
const navTextColor = document.querySelector('#navText')
function handdleScroll(){
    const scrollPosition = window.scrollY;
    const scroll = scrollPosition.toFixed(0)
    if(scroll >= 300){
             scrollNavbar.style.position = 'fixed';
             scrollNavbar.style.top = 0;
             scrollNavbar.style.left = 0;
             scrollNavbar.style.right =  0;
             scrollNavbar.style.zIndex = 999999;
             scrollNavbar.style.height = 90 + 'px';
            scrollNavbar.style.background = "#fff";
            scrollNavbar.style.boxShadow = "0 8px 25px 0 rgba(0, 0, 0, 0.04)";
            navTextColor.style.color = "#000";
    }
    if(scroll == 0){
        scrollNavbar.style.position = 'relative';
        scrollNavbar.style.background = 'transparent';
         scrollNavbar.style.boxShadow = 'none' ;
         navTextColor.style.color = '#465761';
    }

}
window.addEventListener('scroll', handdleScroll)

// sticky navbar end


const closeMenu = document.querySelector('#close')
const showMenu = document.querySelector('#show')
const mobileMenu = document.querySelector('#mobile')


function handleShowMenu() {
    mobileMenu.classList.remove('-translate-x-[100%]')
    mobileMenu.classList.add('translate-x-[0%]')
}

function hideMenu() {
    mobileMenu.classList.add('-translate-x-[100%]')
    mobileMenu.classList.remove('translate-x-[0%]')

}

closeMenu.addEventListener('click', hideMenu)

showMenu.addEventListener('click', handleShowMenu)


    </script>

    